{
    "train_path": "../dataset/scitail_train.txt",
    "dev_path": "../dataset/scitail_dev.txt",
    "test_path": "../dataset/scitail_test.txt",
    "word_vec_path": "../dataset/scitail_glove_embedding.txt",
